<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/incomingCallHolder"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Space
        android:id="@+id/leftSpaceButton"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:maxWidth="90dp"
        android:layout_marginHorizontal="32dp"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintWidth_percent="0.20"
        app:layout_constraintTop_toTopOf="@+id/centerSpaceButton"
        app:layout_constraintBottom_toBottomOf="@+id/centerSpaceButton"
        app:layout_constraintEnd_toStartOf="@+id/centerSpaceButton"/>

    <Space
        android:id="@+id/centerSpaceButton"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:maxWidth="90dp"
        android:layout_marginBottom="62dp"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintWidth_percent="0.20"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <Space
        android:id="@+id/rightSpaceButton"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:maxWidth="90dp"
        android:layout_marginHorizontal="32dp"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintWidth_percent="0.20"
        app:layout_constraintTop_toTopOf="@+id/centerSpaceButton"
        app:layout_constraintBottom_toBottomOf="@+id/centerSpaceButton"
        app:layout_constraintStart_toEndOf="@+id/centerSpaceButton"/>

    <ImageView
        android:id="@+id/callDecline"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:maxWidth="90dp"
        android:contentDescription="@string/decline_call"
        android:src="@drawable/ic_call_end"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintWidth_percent="0.20"
        app:layout_constraintTop_toTopOf="@+id/leftSpaceButton"
        app:layout_constraintBottom_toBottomOf="@+id/leftSpaceButton"
        app:layout_constraintStart_toStartOf="@+id/leftSpaceButton"
        app:layout_constraintEnd_toEndOf="@+id/leftSpaceButton"/>

    <com.goodwy.commons.views.MyTextView
        android:id="@+id/callDeclineLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/medium_margin"
        android:text="@string/decline"
        android:textSize="@dimen/normal_text_size"
        app:layout_constraintEnd_toEndOf="@+id/callDecline"
        app:layout_constraintStart_toStartOf="@+id/callDecline"
        app:layout_constraintTop_toBottomOf="@+id/callDecline"/>

    <ImageView
        android:id="@+id/callAccept"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:maxWidth="90dp"
        android:contentDescription="@string/accept_call"
        android:src="@drawable/ic_call_accept"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintWidth_percent="0.20"
        app:layout_constraintTop_toTopOf="@+id/rightSpaceButton"
        app:layout_constraintBottom_toBottomOf="@+id/rightSpaceButton"
        app:layout_constraintStart_toStartOf="@+id/rightSpaceButton"
        app:layout_constraintEnd_toEndOf="@+id/rightSpaceButton"/>

    <com.goodwy.commons.views.MyTextView
        android:id="@+id/call_accept_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/medium_margin"
        android:elevation="@dimen/medium_margin"
        android:text="@string/accept"
        android:textSize="@dimen/normal_text_size"
        app:layout_constraintEnd_toEndOf="@+id/callAccept"
        app:layout_constraintStart_toStartOf="@+id/callAccept"
        app:layout_constraintTop_toBottomOf="@+id/callAccept"/>

    <ImageView
        android:id="@+id/call_remind"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginBottom="108dp"
        android:background="@drawable/pulsing_background_ripple"
        android:alpha="0.9"
        android:contentDescription="@string/remind_me"
        android:padding="@dimen/normal_margin"
        android:src="@drawable/ic_alarm_filled_vector"
        app:layout_constraintBottom_toTopOf="@+id/leftSpaceButton"
        app:layout_constraintEnd_toEndOf="@+id/leftSpaceButton"
        app:layout_constraintStart_toStartOf="@+id/leftSpaceButton"
        tools:backgroundTint="@color/dark_grey"/>

    <com.goodwy.commons.views.MyTextView
        android:id="@+id/call_remind_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/smaller_margin"
        android:elevation="@dimen/medium_margin"
        android:text="@string/remind_me"
        android:textSize="@dimen/normal_text_size"
        app:layout_constraintEnd_toEndOf="@+id/call_remind"
        app:layout_constraintStart_toStartOf="@+id/call_remind"
        app:layout_constraintTop_toBottomOf="@+id/call_remind"/>

    <ImageView
        android:id="@+id/callMessage"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginBottom="108dp"
        android:background="@drawable/pulsing_background_ripple"
        android:alpha="0.9"
        android:contentDescription="@string/send_sms"
        android:padding="@dimen/normal_margin"
        android:src="@drawable/ic_messages"
        app:layout_constraintBottom_toTopOf="@+id/rightSpaceButton"
        app:layout_constraintEnd_toEndOf="@+id/rightSpaceButton"
        app:layout_constraintStart_toStartOf="@+id/rightSpaceButton"
        tools:backgroundTint="@color/dark_grey"/>

    <com.goodwy.commons.views.MyTextView
        android:id="@+id/callMessageLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/smaller_margin"
        android:elevation="@dimen/medium_margin"
        android:text="@string/message"
        android:textSize="@dimen/normal_text_size"
        app:layout_constraintEnd_toEndOf="@+id/callMessage"
        app:layout_constraintStart_toStartOf="@+id/callMessage"
        app:layout_constraintTop_toBottomOf="@+id/callMessage"/>

    <com.goodwy.commons.views.MyTextView
        android:id="@+id/callAcceptAndDecline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/big_margin"
        android:paddingHorizontal="@dimen/normal_margin"
        android:paddingTop="5dp"
        android:paddingBottom="@dimen/smaller_margin"
        android:elevation="@dimen/normal_margin"
        android:text="@string/answer_end_other_call"
        android:textSize="@dimen/normal_text_size"
        android:maxLines="2"
        android:gravity="center"
        android:background="@drawable/search_bg"
        android:foreground="@drawable/ripple_all_corners_12dp"
        android:visibility="gone"
        app:layout_constraintTop_toBottomOf="@+id/callMessageLabel"
        app:layout_constraintBottom_toTopOf="@+id/callAccept"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:visibility="visible" />

    <Space
        android:id="@+id/sliderSpaceButton"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:maxWidth="90dp"
        android:layout_marginBottom="58dp"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintWidth_percent="0.22"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/call_draggable_background"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:maxHeight="100dp"
        android:layout_marginHorizontal="@dimen/call_slider_margin"
        android:background="@drawable/call_draggable_background"
        android:padding="5dp"
        android:contentDescription="@null"
        app:layout_constraintTop_toTopOf="@+id/sliderSpaceButton"
        app:layout_constraintBottom_toBottomOf="@+id/sliderSpaceButton"
        app:layout_constraintEnd_toEndOf="parent">

        <ImageView
            android:id="@+id/callDraggableBackgroundIcon"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:contentDescription="@string/decline_call"
            android:padding="@dimen/activity_margin"
            android:src="@drawable/ic_phone_down_vector"
            android:background="@drawable/pulsing_background"
            app:layout_constraintDimensionRatio="1:1"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <ImageView
        android:id="@+id/call_draggable"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:maxWidth="90dp"
        android:layout_marginStart="@dimen/three_dp"
        android:contentDescription="@string/decline_call"
        android:padding="@dimen/activity_margin"
        android:alpha="0"
        android:src="@drawable/ic_phone_down_vector"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintWidth_percent="0.20"
        app:layout_constraintBottom_toBottomOf="@+id/call_draggable_background"
        app:layout_constraintStart_toStartOf="@+id/call_draggable_background"
        app:layout_constraintTop_toTopOf="@+id/call_draggable_background"/>

    <ImageView
        android:id="@+id/call_left_arrow"
        android:layout_width="@dimen/incoming_call_arrow_size"
        android:layout_height="@dimen/incoming_call_arrow_size"
        android:alpha="0.2"
        android:contentDescription="@null"
        android:padding="@dimen/medium_margin"
        android:layout_marginEnd="-9dp"
        android:src="@drawable/ic_chevron_left_vector"
        app:layout_constraintBottom_toBottomOf="@+id/call_draggable"
        app:layout_constraintEnd_toStartOf="@+id/call_draggable"
        app:layout_constraintTop_toTopOf="@+id/call_draggable"/>

    <ImageView
        android:id="@+id/call_right_arrow"
        android:layout_width="@dimen/incoming_call_arrow_size"
        android:layout_height="@dimen/incoming_call_arrow_size"
        android:alpha="0.2"
        android:contentDescription="@null"
        android:padding="@dimen/medium_margin"
        android:layout_marginStart="-10dp"
        android:src="@drawable/ic_chevron_right_vector"
        app:layout_constraintBottom_toBottomOf="@+id/call_draggable"
        app:layout_constraintStart_toEndOf="@+id/call_draggable"
        app:layout_constraintTop_toTopOf="@+id/call_draggable"/>

    <ImageView
        android:id="@+id/call_draggable_vertical"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:contentDescription="@string/decline_call"
        android:padding="@dimen/activity_margin"
        android:background="@drawable/pulsing_background"
        android:src="@drawable/ic_phone_down_vector"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/sliderSpaceButton"
        app:layout_constraintStart_toStartOf="@+id/sliderSpaceButton"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.9"/>

    <ImageView
        android:id="@+id/call_up_arrow"
        android:layout_width="@dimen/incoming_call_arrow_size"
        android:layout_height="@dimen/incoming_call_arrow_size"
        android:alpha="0.2"
        android:contentDescription="@null"
        android:padding="@dimen/medium_margin"
        android:src="@drawable/ic_chevron_up_vector"
        app:layout_constraintBottom_toTopOf="@+id/call_draggable_vertical"
        app:layout_constraintStart_toStartOf="@+id/call_draggable_vertical"
        app:layout_constraintEnd_toEndOf="@+id/call_draggable_vertical"/>

    <ImageView
        android:id="@+id/call_down_arrow"
        android:layout_width="@dimen/incoming_call_arrow_size"
        android:layout_height="@dimen/incoming_call_arrow_size"
        android:alpha="0.2"
        android:contentDescription="@null"
        android:padding="@dimen/medium_margin"
        android:src="@drawable/ic_chevron_down_vector"
        app:layout_constraintTop_toBottomOf="@+id/call_draggable_vertical"
        app:layout_constraintStart_toStartOf="@+id/call_draggable_vertical"
        app:layout_constraintEnd_toEndOf="@+id/call_draggable_vertical"/>

</androidx.constraintlayout.widget.ConstraintLayout>
